<h1>Hello World!</h1>
<h2>Olá, estou em index/controller products</h2>

<%= link_to "Criar produto", new_product_path %>

<% @products.each do |product| %>
    <p><%= product.name %></p>
    <p><%= product.amount %></p>
    <p><%= product.price %></p>

    <%= link_to "Ver produto", product %>
    <%= link_to "Editar produto", edit_product_path(product) %>
    <%= button_to "Apagar", product, method: :delete, form: { data: {turbo_confirm: "Você tem certeza que quer apagar?" } } %>

<% end %>